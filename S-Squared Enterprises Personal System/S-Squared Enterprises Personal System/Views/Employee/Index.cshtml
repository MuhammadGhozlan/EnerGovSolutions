@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-black">Employee List</h2>
        </div>

        <div class="col-6">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary bg-black text-white">&nbsp; Add Employee</a>
        </div>
    </div>
    <br/>
    <br/>
    <label for="Manager">Choose a Manager:</label>

    <select name="Manager" id="MangerID">
        
        @foreach(var obj in Model)
        {
            
            <option value=@obj.EmployeeID>@obj.LastName</option>
            
        }
       
    </select>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Employee ID
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="20%">@obj.EmployeeID</td>
                    <td width="40%">@obj.LastName</td>
                    <td width="40%">@obj.FirstName</td>
                    <td>
                        <div class="w-75 btnbtn-group" role="group">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@obj.EmployeeID"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp; Update</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btnbtn-group" role="group">
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.EmployeeID"
                           class="btn btn-primary mx-2"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>

    </table>
</div>
